<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:layout_marginTop="16dp"
                                             android:background="@color/fundo">

    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:id="@+id/username_textview_new_message"
            app:layout_constraintTop_toTopOf="@+id/imageview_new_message" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_new_message" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageview_new_message"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageview_new_message"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/username_textview_new_message"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"

    />
</android.support.constraint.ConstraintLayout>